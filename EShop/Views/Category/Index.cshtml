@model List<EShop.Models.tb_Category>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        table{
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    <div>
        <h2>Danh Sách Sản Phẩm</h2>
        @Html.ActionLink("Thêm Mới", "Add")
        <table border="1" cellpadding="5" cellspacing="0">
            <tr>
                <th>ID</th>
                <th>Tên Danh Mục</th>
                <th>Tên Danh Mục (Tiếng Việt)</th>
                <th>Chức Năng</th>
            </tr>
            @foreach(var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.NameVN</td>
                <td>
                    @Html.ActionLink("Sửa", "Update")
                    @Html.ActionLink("Xóa", "Delete")
                </td>
            </tr>
            }
        </table>
    </div>
</body>
</html>
